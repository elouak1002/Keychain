<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="640.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Client">
   <children>
      <HBox minWidth="640.0" prefHeight="45.0" prefWidth="640.0" style="-fx-background-color: #EBECEC #EBECEC;">
         <children>
            <Label prefHeight="27.0" prefWidth="75.0" text="Username:">
               <HBox.margin>
                  <Insets left="10.0" top="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="usernameField" alignment="TOP_LEFT" prefHeight="27.0" prefWidth="118.0">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
            </TextField>
            <Label prefHeight="27.0" prefWidth="75.0" text="Password:">
               <HBox.margin>
                  <Insets left="10.0" top="10.0" />
               </HBox.margin>
            </Label>
            <PasswordField fx:id="passwordField" prefHeight="27.0" prefWidth="118.0">
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
            </PasswordField>
            <Button fx:id="connectButton" mnemonicParsing="false" prefHeight="27.0" prefWidth="105.0" text="Quickconnect">
               <HBox.margin>
                  <Insets left="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox prefHeight="570.0" prefWidth="960.0" style="-fx-background-color: white;">
         <children>
            <VBox prefHeight="500.0" prefWidth="320.0" style="-fx-border-color: black;">
               <HBox.margin>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </HBox.margin>
               <children>
                  <Label alignment="CENTER" prefWidth="399.0" style="-fx-background-color: #EBECEC #EBECEC #EBECEC #EBECEC;" text="Your files">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <ListView fx:id="filesList" prefHeight="550.0" prefWidth="200.0" />
               </children>
            </VBox>
            <VBox prefHeight="550.0" prefWidth="640.0" style="-fx-border-color: black;">
               <HBox.margin>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </HBox.margin>
               <children>
                  <TextArea fx:id="fileArea" prefHeight="540.0" prefWidth="200.0" />
                  <HBox prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #EBECEC #EBECEC #EBECEC #EBECEC;">
                     <children>
                        <Label prefWidth="65.0" text="Filename:">
                           <HBox.margin>
                              <Insets left="5.0" top="5.0" />
                           </HBox.margin></Label>
                        <Label fx:id="fileName" prefWidth="300.0" text="name of the file">
                           <HBox.margin>
                              <Insets left="1.0" top="5.0" />
                           </HBox.margin>
                        </Label>
                        <Label text="Status:">
                           <HBox.margin>
                              <Insets top="5.0" />
                           </HBox.margin>
                        </Label>
                        <Label fx:id="fileStatus" text="Name of the status">
                           <HBox.margin>
                              <Insets left="4.0" top="5.0" />
                           </HBox.margin>
                        </Label>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox prefHeight="30.0" prefWidth="200.0">
         <children>
            <Label prefHeight="27.0" prefWidth="120.0" text="Connection Status:">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="connectionStatus" prefHeight="27.0" prefWidth="200.0" text="The connection status" />
         </children>
      </HBox>
   </children>
</VBox>
