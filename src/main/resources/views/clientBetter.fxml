<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="640.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ClientController">
   <children>
      <HBox minWidth="640.0" prefHeight="45.0" prefWidth="640.0" style="-fx-background-color: #EBECEC #EBECEC;">
         <children>
            <Label prefHeight="27.0" prefWidth="75.0" text="Username:">
               <HBox.margin>
                  <Insets left="10.0" top="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="usernameField" alignment="TOP_LEFT" prefHeight="27.0" prefWidth="118.0">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
            </TextField>
            <Label prefHeight="27.0" prefWidth="75.0" text="Password:">
               <HBox.margin>
                  <Insets left="10.0" top="10.0" />
               </HBox.margin>
            </Label>
            <PasswordField fx:id="passwordField" prefHeight="27.0" prefWidth="118.0">
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
            </PasswordField>
            <Button fx:id="connectButton" mnemonicParsing="false" onAction="#openPassword" prefHeight="27.0" prefWidth="105.0" text="Quickconnect">
               <HBox.margin>
                  <Insets left="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="accountButton" mnemonicParsing="false" text="Create Account">
               <HBox.margin>
                  <Insets left="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox prefHeight="570.0" prefWidth="960.0" style="-fx-background-color: white;" />
      <HBox prefHeight="30.0" prefWidth="200.0">
         <children>
            <Label prefHeight="27.0" prefWidth="120.0" text="Connection Status:">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="connectionStatus" prefHeight="27.0" prefWidth="200.0" text="The connection status" />
         </children>
      </HBox>
   </children>
</VBox>
